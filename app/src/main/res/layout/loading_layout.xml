<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                             xmlns:app="http://schemas.android.com/apk/res-auto"
                                             xmlns:tools="http://schemas.android.com/tools"
                                             android:layout_width="match_parent"
                                             android:layout_height="match_parent"
                                             android:elevation="5dp"
                                             android:background="@android:color/black">

    <TextView
            android:text="Connecting"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/loadingTextView" android:textSize="30sp"
            android:textAlignment="textStart" android:textColor="@android:color/white"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintVertical_bias="0.85"
            android:layout_marginStart="50dp"/>
    <ImageView
            android:layout_width="94dp"
            android:layout_height="64dp"
            android:background="@drawable/loading_anim"
            app:layout_constraintStart_toEndOf="@+id/loadingTextView"
            app:layout_constraintTop_toTopOf="@+id/loadingTextView"
            app:layout_constraintBottom_toBottomOf="@+id/loadingTextView"
            app:layout_constraintVertical_bias="0.45" android:id="@+id/loadingAnimator"/>
