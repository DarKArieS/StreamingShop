<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                             xmlns:app="http://schemas.android.com/apk/res-auto"
                                             xmlns:tools="http://schemas.android.com/tools"
                                             android:layout_width="match_parent"
                                             android:layout_height="75dp"
                                             android:id="@+id/buyerOrderBroadcastViewHolderLayout"
                                             android:clickable="true"
                                             android:focusable="true"
                                             android:background="@drawable/adapter_background2">

    <TextView
            android:text="直播名稱"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/showBuyerOrderBroadcastName"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="16dp"/>
    <TextView
            android:text="總價"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/showBuyerOrderTotalPrice" app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="16dp"/>
</android.support.constraint.ConstraintLayout>